<% if current_user.following?(user) %>
  <%#= render partial: "relationships/unfollower_button", locals: { user: @user } %>
  <%= form_for(current_user.relationships.find_by(follower_id: user.id), url: destroy_user_path(user), html: { method: :delete }, class: 'like-show-btn', remote: true ) do |f| %>
    <%= hidden_field_tag :follower_id, user.id %>
    <%= f.submit 'フォロー解除', class: 'like-show-btn-text' %>
  <% end %>
<% else %>
  <%#= render partial: "relationships/follower_button", locals: { user: @user } %>
  <%= form_for(current_user.relationships.build, url: create_user_path(user), class: 'like-show-btn', remote: true ) do |f| %>
    <%= hidden_field_tag :follower_id, user.id %>
    <%= f.submit 'フォロ-する', class: 'like-show-btn-text2' %>
  <% end %>
<% end %>


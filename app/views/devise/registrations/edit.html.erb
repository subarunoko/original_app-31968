<div class="allwrapper">

  <%= render "shared/new_header" %>

  <div class="user-edit-main-container">
    <%= render "shared/main_sub" %>
    <div class="user-edit-out-content">
      <div class="user-edit-in-content">
        <div class="user-edit-main-left-content">
          <div class="user-edit-main-left-up-content">
            <h2 style="display:inline">Edit </h2><h6 style="display:inline">メールアドレス編集画面</h6>
            <%#= image_tag "profile.png", class:"edit-pro-img" %>
         
          </div>
          <div class="user-edit-main-left-first-content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="user-edit-regist">
                <%= f.label :nickname %><br />
                <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
              </div>

              <div class="user-edit-regist">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="user-edit-regist">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
              </div>

              <div class="user-edit-regist">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="user-edit-regist">
                <%= f.submit "編集する", class:"regist-next-btn" %>
              </div>
            <% end %>
          </div>

          <div class="user-edit-main-left-second-content">
          </div>

          <div class="user-edit-main-left-third-content">
          </div>

          <div class="user-edit-main-left-under-content">
          </div>
        </div>

        <%# <div class="user-edit-main-right-content">
        789
        </div> %>
      </div> 
    </div>
  </div>

  <%= render "shared/footer" %>

</div>